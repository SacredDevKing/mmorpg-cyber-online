{
  "compileOnSave": false,
  "compilerOptions": {
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,
    "skipLibCheck": true,
    "target": "ES2019", 
    "lib": [
      "es2018",
      "dom",
      "ESNext"
    ],
    "importHelpers": true
  },
  "include": [ 
    "src"
  ] 
}